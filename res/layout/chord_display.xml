<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="76dp"
            android:background="@drawable/savebutton" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/abbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:text="abbr"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/interval"
                android:layout_below="@+id/interval"
                android:layout_marginTop="18dp"
                android:text="Scale: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/intervalVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/scale"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:text="intervalVal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/scaleVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/scale"
                android:layout_alignBottom="@+id/scale"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:text="scaleVal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/abbr"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:text="Interval: "
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/chordImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <View
        android:id="@+id/listen"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/listenbutton" />

</RelativeLayout>