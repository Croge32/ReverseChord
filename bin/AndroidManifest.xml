<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reversechord"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" ></uses-permission>
    
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.reversechord.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reversechord.SongList">
      	</activity>
      	<activity
            android:name="com.reversechord.ReverseFind">
      	</activity>
      	<activity
            android:name="com.reversechord.ChordFind">
      	</activity>
      	<activity
            android:name="com.reversechord.ChordVariation">
      	</activity>
      	<activity
            android:name="com.reversechord.EditSong">
      	</activity>
      	<activity
            android:name="com.reversechord.ChordDisplay">
      	</activity>
      	<activity
            android:name="com.reversechord.SetStrumPattern">
      	</activity>
    </application>

</manifest>
